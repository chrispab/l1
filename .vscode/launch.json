    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug on homestead",
            "type": "php",
            "request": "launch",
            "port": 9000,
            // server -> local
            "pathMappings": {
                // "/vagrant/intranet": "${workspaceFolder:intranet}",
                    "/home/vagrant/code": "${workspaceRoot}/blog"
                //"/vagrant/gotri": "${workspaceFolder:gotri}",
            }
        },
        
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }

    ]
}

